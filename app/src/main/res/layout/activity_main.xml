<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/select_pinned_apps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select pinned apps"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/select_blocked_apps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select blocked apps"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_pinned_apps" />

    <Button
        android:id="@+id/select_blocked_keywords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Blocked Keywords"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_blocked_apps" />
</androidx.constraintlayout.widget.ConstraintLayout>